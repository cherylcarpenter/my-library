generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  role          UserRole  @default(USER)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  libraries     Library[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Library {
  id        String     @id @default(cuid())
  name      String     @default("My Books")
  slug      String
  isPublic  Boolean    @default(true)
  userId    String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userBooks UserBook[]

  @@unique([userId, slug])
}

model Book {
  id                      String       @id @default(cuid())
  title                   String
  slug                    String       @unique
  isbn                    String?
  isbn13                  String?
  goodreadsId             String?      @unique
  openLibraryKey          String?
  description             String?
  coverUrl                String?
  pages                   Int?
  yearPublished           Int?
  originalPublicationYear Int?
  publisher               String?
  binding                 String?
  language                String?      @default("english")
  averageRating           Float?
  seriesId                String?
  seriesOrder             Float?
  openLibraryId           String?
  enrichedAt              DateTime?
  enrichmentStatus        EnrichmentStatus @default(PENDING)
  createdAt               DateTime     @default(now())
  updatedAt               DateTime     @updatedAt
  series                  Series?      @relation(fields: [seriesId], references: [id])
  authors                 BookAuthor[]
  userBooks               UserBook[]
  genres                  BookGenre[]

  @@index([seriesId])
  @@index([slug])
  @@index([enrichmentStatus])
}

model UserBook {
  id               String    @id @default(cuid())
  libraryId        String
  bookId           String
  shelf            Shelf     @default(TO_READ)
  dateRead         DateTime?
  dateAdded        DateTime  @default(now())
  readCount        Int       @default(0)
  myRating         Int?
  myReview         String?
  privateNotes     String?
  ownedKindle      Boolean   @default(false)
  ownedAudible     Boolean   @default(false)
  kindleAsin       String?
  audibleAsin      String?
  audibleDuration  String?
  audibleNarrators String[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  book             Book      @relation(fields: [bookId], references: [id], onDelete: Cascade)
  library          Library   @relation(fields: [libraryId], references: [id], onDelete: Cascade)

  @@unique([libraryId, bookId])
  @@index([shelf])
  @@index([myRating])
  @@index([dateRead])
  @@index([dateAdded])
}

model Series {
  id              String   @id @default(cuid())
  name            String
  slug            String   @unique
  description     String?
  openLibraryKey  String?
  openLibrarySlug String?  // OpenLibrary series identifier (e.g., "OL27448A")
  bookCount       Int?     // Number of books in series (from OpenLibrary)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  books           Book[]
}

model Author {
  id             String       @id @default(cuid())
  name           String
  slug           String       @unique
  lastName       String?      // For sorting and display as "Last, First"
  openLibraryKey String?
  openLibraryId  String?
  bio            String?
  photoUrl       String?
  birthDate      String?
  deathDate      String?
  enrichedAt     DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  books          BookAuthor[]

  @@index([lastName])
}

model BookAuthor {
  bookId   String
  authorId String
  role     String @default("author")
  author   Author @relation(fields: [authorId], references: [id], onDelete: Cascade)
  book     Book   @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@id([bookId, authorId, role])
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  genres    Genre[]
}

model Genre {
  id         String      @id @default(cuid())
  name       String      @unique
  slug       String      @unique
  source     String?     // "kindle" | "audible" | "goodreads" | "openlibrary"
  bookCount  Int         @default(0)
  categoryId String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  category   Category?   @relation(fields: [categoryId], references: [id])
  books      BookGenre[]

  @@index([categoryId])
}

model BookGenre {
  bookId  String
  genreId String
  source  String?  // Which import source this came from
  book    Book    @relation(fields: [bookId], references: [id], onDelete: Cascade)
  genre   Genre   @relation(fields: [genreId], references: [id], onDelete: Cascade)

  @@id([bookId, genreId])
}

enum UserRole {
  USER
  ADMIN
}

enum Shelf {
  READ
  CURRENTLY_READING
  TO_READ
  TO_READ_SOONER
  DID_NOT_FINISH
}

enum EnrichmentStatus {
  PENDING
  ENRICHED
  NOT_FOUND
  PARTIAL
  FAILED
}
